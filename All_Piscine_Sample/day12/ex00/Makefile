NAME = ft_display_file
C_FILES = display_file.c

.PHONY: all clean fclean

all:
	@gcc -Wall -Wextra -Werror -o $(NAME) $(C_FILES)

clean:
	@rm -f *.o

fclean: clean
	@rm -f $(NAME)
